<Window x:Class="ProcessManager.App.Wpf.Dialogs.PasswordChangeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Title="Password Change" Height="250" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <TextBlock Grid.Row="2" Text="Nowe hasło:" Margin="10"/>
        <PasswordBox x:Name="newPasswordBox" Grid.Row="3" Margin="10"/>

        <TextBlock Grid.Row="4" Text="Powtórz hasło:" Margin="10"/>
        <PasswordBox x:Name="confirmPasswordBox" Grid.Row="4" Margin="10,34,10,-14"/>

        <Button Grid.Row="4" Content="Zapisz" Margin="10,65,10,-47" Click="ChangePassword_Click"/>
    </Grid>
</Window>
